<Window x:Class="VB6ExtensionsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vb="clr-namespace:VB6Extensions.Parser;assembly=VB6Extensions"
        Title="{Binding Name}" Height="350" Width="525">
    <Grid>
        <TreeView ItemsSource="{Binding Nodes}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Nodes}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Icon}" />
                            <TextBlock Text="{Binding}" />
                        </StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                        <Label Content="{Binding Description}" 
                               Visibility="{Binding DescriptionVisibility}" 
                               Foreground="Green" FontSize="10">
                            <!-- fix forecolor when selected -->
                        </Label>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
